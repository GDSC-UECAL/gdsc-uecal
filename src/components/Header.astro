<nav class="fixed w-full top-0 left-0 z-50 transition-all" id="navbar">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/" class="flex-shrink-0">
      <Image src={Logo} alt="GDSC Logo" class="w-14 h-auto" />
    </a>

    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 text-dark rounded-lg md:flex-row md:space-x-8 md:mt-0"
      >
        <HeaderLink
          href="/"
          class="flex items-center py-4 pl-3 pr-4 text-dark bg-gray-700 rounded md:bg-transparent md:p-0 dark:text-white"
        >
          Home
        </HeaderLink>
        <HeaderLink
          href="/about"
          class="flex items-center py-4 bg-gray-700 pl-3 pr-4 text-dark rounded md:bg-transparent md:p-0 dark:text-white"
        >
          About
        </HeaderLink>
        <HeaderLink
          href="/events"
          class="flex items-center py-4 pl-3 pr-4 text-dark rounded md:bg-transparent md:p-0 dark:text-white"
        >
          Events
        </HeaderLink>
        <Button asLink={true} href="/about" class="block py-4">
          Become a member
        </Button>
      </ul>
    </div>
  </div>
</nav>

<script>
  const navbar = document.getElementById("navbar");

  window.addEventListener("load", function () {
    if (navbar) {
      if (window.location.pathname !== "/") {
        navbar.classList.add("bg-purple-950");
        navbar.classList.add("backdrop-filter");
        navbar.classList.add("backdrop-blur-lg");
        navbar.classList.add("bg-opacity-30");
        navbar.classList.add("shadow-md");
      }
    }
  });

  window.addEventListener("scroll", function () {
    if (navbar) {
      if (window.scrollY > 0) {
        navbar.classList.add("bg-purple-950");
        navbar.classList.add("backdrop-filter");
        navbar.classList.add("backdrop-blur-lg");
        navbar.classList.add("bg-opacity-30");
        navbar.classList.add("shadow-md");
      } else {
        navbar.classList.remove("bg-purple-950");
        navbar.classList.remove("backdrop-filter");
        navbar.classList.remove("backdrop-blur-lg");
        navbar.classList.remove("bg-opacity-30");
        navbar.classList.remove("shadow-md");
      }
    }
  });
</script>
