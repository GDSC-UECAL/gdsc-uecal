import Two from "../../assets/about/2.png";
import Three from "../../assets/about/3.png";
import Four from "../../assets/about/4.png";
import Five from "../../assets/about/5.png";
import Six from "../../assets/about/6.png";
---

<section class="py-24" id="about-igmakadima">
	<div class="flex flex-col">
        <div class="flex flex-col justify-center items-center p-8">

            <h1 class="text-center lg:text-start font-bold text-4xl sm:text-4xl leading-none">
				To Grow and To 
                <h1 class="text-6xl mb-6 pb-2 text-center font-bold from-red-600 via-pink-blue to-violet-600 bg-gradient-to-r bg-clip-text text-transparent">
                    Igma Kadima
                </h1>
            </h1>        

            <div class="mx-auto max-w-2xl px-14 py-6 sm:px-6 sm:py-14 lg:max-w-7xl lg:px-14">
                <p class="text-lg md:text-3xl leading-relaxed mb-4">
                    Google Developer Student Clubs UE Caloocan is a student-led technology 
                    organization situated at the University of The East in Caloocan City. 
                    As a proud member of a global community, our mission is to empower diverse 
                    communities worldwide through the transformative power of technology.
                </p>
            </div>
            
        </div>
	</div>
</section>

